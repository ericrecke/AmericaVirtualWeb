@using AmericaVirtual_DataModel;
@{
    ViewBag.Title = "Provincias";
    Layout = "~/Areas/Intranet/Views/Shared/_Layout.cshtml";
}
@model List<Provinces>

<div class="row">
    <div class="col-md-12">
        <h3 id="indexTitle" class="mt-3 text-uppercase text-center">Listado de Provincias</h3>
        <hr class="c-america" />
    </div>
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                @{
                    if (Model == null)
                    {
                        <h1 class="text-center"> Atención </h1>
                        <h4 class="text-center"> No se encuentran datos para mostrar.</h4>
                    }
                    else
                    {
                        <div class="btn-group float-right mb-3" role="group" aria-label="Buttons Crud">
                            <button type="button" class="btn btn-success btnadd">Agregar</button>
                            <button type="button" class="btn btn-america btnmod">Modificar</button>
                            <button type="button" class="btn btn-danger btndel">Eliminar</button>
                        </div>

                        <input class="form-control mb-3" id="FilterInput" type="text" placeholder="Buscar..">

                        <table class="table table-bordered table-hover" id="tableProvinces" data-toggle="table" data-search="true" data-filter-control="true">
                            <thead>
                                <tr>
                                    <th scope="col">Id</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">País</th>
                                    <th scope="col">Fecha Agregado</th>
                                </tr>
                            </thead>
                            <tbody id="tableContent">
                                @{
                                    foreach (var Province in Model)
                                    {
                                        <tr class="clickable-row" data-id="@Province.Id">
                                            <td>@Province.Id</td>
                                            <td>@Province.Name</td>
                                            <td>@Province.Countries.Name</td>
                                            <td>@Province.Date_Add.ToShortDateString()</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    }
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var IdSelected = 0;
        $(document).ready(function () {
            $("#FilterInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#tableContent tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });

        $('#tableProvinces').on('click', '.clickable-row', function (event) {
            if ($(this).hasClass('bg-america')) {
                $(this).removeClass('bg-america');
            } else {
                $(this).addClass('bg-america').siblings().removeClass('bg-america');
            }
        });

        $("tbody tr").on('click', function () {
            debugger
            IdSelected = $(this).data('id');
        });

        $(".btnadd").click(function () {
            AddMod();
        });

        $(".btnmod").click(function () {
            if (IdSelected !== 0)
            AddMod(IdSelected);
        });

        $(".btndel").click(function () {
            if (IdSelected !== 0) {
                ShowSweetAlert("Eliminar", "¿Estas seguro de Eliminar la Provincia con Id: " + IdSelected + "?", "warning", true).then((result) => {
                    debugger
                    if (result) {
                        var mymodel =@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(new Countries(), Newtonsoft.Json.Formatting.Indented));
                        mymodel.Id = IdSelected;
                        $.ajax({
                            type: "POST",
                            url: '@Url.Action("UpdateProvince", "Provinces", new { Area = "Intranet" })' + "?delete=true",
                            data: JSON.stringify(mymodel),
                            contentType: 'application/json',
                            success: function (response) {
                                ShowSweetAlert("Eliminar", "Se eleminó correctamente", "success").then((result) => {
                                    location.reload();
                                });
                            },
                            error: function (response) {
                                alert(response.responseText);
                            }
                        });
                    }
                });
            }
            else {
                ShowSweetAlert("Eliminar", "No seleccionó ningun valor de la tabla.", "warning")
            }
        });

        function AddMod(id) {
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("AddMod", "Provinces", new { Area = "Intranet" })',
                    data: '{Id: "' + id + '" }',
                    contentType: "application/json; charset=utf-8",
                    dataType: "html",
                    success: function (response) {
                        $('#form-modal .modal-body').html(response);
                        $('#form-modal .modal-title').html('AddMod - País');
                        $('#form-modal').modal('show');
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
        }
    </script>
}
